<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="Добавить эллемента"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/add_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Название"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/add_card_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Описание"
            android:textSize="20sp" />

     <RadioGroup
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal">
         <RadioButton
             android:id="@+id/add_card_image1"
             android:layout_width="200dp"
             android:layout_height="150dp"
             android:drawableRight="@drawable/nature1"
             android:layout_marginBottom="20dp"/>
         <RadioButton
             android:id="@+id/add_card_image2"
             android:layout_width="200dp"
             android:layout_height="150dp"
             android:drawableRight="@drawable/nature2"
             android:layout_marginBottom="20dp"/>
         <RadioButton
             android:id="@+id/add_card_image3"
             android:layout_width="200dp"
             android:layout_height="150dp"
             android:drawableRight="@drawable/nature3"
             android:layout_marginBottom="20dp"/>
         <RadioButton
             android:id="@+id/add_card_image4"
             android:layout_width="200dp"
             android:layout_height="150dp"
             android:drawableRight="@drawable/nature4"
             android:layout_marginBottom="20dp"/>
         <RadioButton
             android:id="@+id/add_card_image5"
             android:layout_width="200dp"
             android:layout_height="150dp"
             android:drawableRight="@drawable/nature5"
             android:layout_marginBottom="20dp"/>
     </RadioGroup>



        <Button
            android:id="@+id/btn_add"
            android:textSize="20sp"
            android:background="@color/purple_200"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить"/>
    </LinearLayout>
</ScrollView>